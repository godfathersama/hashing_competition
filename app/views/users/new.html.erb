<h1>Sign up!</h1>

<%= form_for (@user) do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  
  <div>
    <%= f.label :email_confirmation %>
    <%= f.text_field :email_confirmation %>
  </div>
<% end %>
